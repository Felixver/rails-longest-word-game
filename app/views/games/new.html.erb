<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Word">
  <input id="letter-array" name="letter-array" value="<%= @letters.join %>" type="hidden" />
  <input type="submit">
</form>
<% @letters.each do |letter| %>
<%= letter %>
<% end %>
